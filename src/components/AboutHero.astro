---
import { about, siteConfig } from "../data/siteData";
---

<section class="pt-8 sm:pt-16 pb-16 sm:pb-24 bg-slate-900 text-white">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 sm:gap-8 lg:gap-16 items-center">
      <!-- Profile Image -->
      <div class="lg:col-span-2 flex justify-center">
        <img
          src={about.image}
          alt="Karen Lee, CPA"
          width="320"
          height="320"
          loading="lazy"
          class="w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 rounded-full object-cover border-4 border-brand-600 shadow-2xl"
        />
      </div>

      <!-- Bio Text -->
      <div class="lg:col-span-3">
        <h1 class="font-serif text-2xl sm:text-3xl md:text-4xl font-bold mb-2">{about.title}</h1>
        <div class="h-1 w-20 bg-brand-600 rounded mb-6"></div>
        <p class="text-base sm:text-lg leading-relaxed text-slate-300 mb-8">
          {about.desc}
        </p>
        <div class="flex items-center gap-4 flex-wrap">
          <button
            class="taxminion-open inline-block rounded-lg bg-brand-600 px-6 sm:px-8 py-3 sm:py-3.5 text-sm sm:text-base font-semibold text-white shadow-lg hover:bg-brand-700 transition-colors focus:outline-none focus:ring-2 focus:ring-brand-400 focus:ring-offset-2 focus:ring-offset-slate-900 cursor-pointer"
          >
            Get Started
          </button>
          <a
            href={siteConfig.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm text-slate-300 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
