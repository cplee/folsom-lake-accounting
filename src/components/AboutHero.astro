---
import { about, siteConfig } from "../data/siteData";
---

<section class="pt-8 sm:pt-16 pb-16 sm:pb-24 bg-slate-900 text-white">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 sm:gap-8 lg:gap-16 items-center">
      <!-- Profile Image -->
      <div class="lg:col-span-2 flex justify-center">
        <img
          src={about.image}
          alt="Karen Lee, CPA"
          width="320"
          height="320"
          loading="lazy"
          class="w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 rounded-full object-cover border-4 border-brand-600 shadow-2xl"
        />
      </div>

      <!-- Bio Text -->
      <div class="lg:col-span-3">
        <h1 class="font-serif text-2xl sm:text-3xl md:text-4xl font-bold mb-2">{about.title}</h1>
        <div class="h-1 w-20 bg-brand-600 rounded mb-6"></div>
        <p class="text-base sm:text-lg leading-relaxed text-slate-300 mb-8">
          {about.desc}
        </p>
        <button
          data-calendly-url={siteConfig.calendlyUrl}
          class="calendly-open inline-block rounded-lg bg-brand-600 px-6 sm:px-8 py-3 sm:py-3.5 text-sm sm:text-base font-semibold text-white shadow-lg hover:bg-brand-700 transition-colors focus:outline-none focus:ring-2 focus:ring-brand-400 focus:ring-offset-2 focus:ring-offset-slate-900 cursor-pointer"
        >
          Get Started
        </button>
      </div>
    </div>
  </div>
</section>
