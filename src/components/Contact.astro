---
import { siteConfig } from "../data/siteData";
---

<section id="contact" class="py-16 sm:py-20 bg-slate-900 text-white">
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    <h2 class="font-serif text-3xl sm:text-4xl font-bold text-center mb-12">
      Contact
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-auto">
      <!-- Address -->
      <div class="rounded-xl bg-slate-800 p-6 text-center">
        <svg class="mx-auto mb-3 h-8 w-8 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
        </svg>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-3">Address</h3>
        <p class="text-sm text-slate-400">{siteConfig.address1}</p>
        <p class="text-sm text-slate-400">{siteConfig.address2}</p>
      </div>

      <!-- Phone -->
      <div class="rounded-xl bg-slate-800 p-6 text-center">
        <svg class="mx-auto mb-3 h-8 w-8 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 0 0 6 3.75v16.5a2.25 2.25 0 0 0 2.25 2.25h7.5A2.25 2.25 0 0 0 18 20.25V3.75a2.25 2.25 0 0 0-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
        </svg>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-3">Phone</h3>
        <a href={`tel:${siteConfig.phone}`} class="text-sm text-slate-400 hover:text-white transition-colors">
          {siteConfig.phone}
        </a>
      </div>
    </div>

    <!-- LinkedIn -->
    <div class="mt-8 flex justify-center">
      <a
        href={siteConfig.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="text-slate-400 hover:text-white transition-colors"
        aria-label="LinkedIn"
      >
        <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>
    </div>
  </div>
</section>
