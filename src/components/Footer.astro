---
import { siteConfig, navLinks } from "../data/siteData";
const year = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-400 py-12 border-t border-slate-800">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8">
      <!-- Branding -->
      <div>
        <a href="/" class="flex items-center gap-2 mb-3">
          <img src={siteConfig.logo} alt={siteConfig.title} class="h-8" />
          <span class="text-white font-semibold">{siteConfig.title}</span>
        </a>
        <p class="text-sm leading-relaxed">
          Karen Lee, CPA â€” tax planning, bookkeeping, and IRS resolution for small businesses in the Sacramento area.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-3">
          Quick Links
        </h3>
        <ul class="space-y-2">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.url}
                class="text-sm hover:text-white transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-3">
          Connect
        </h3>
        <ul class="space-y-2">
          <li>
            <a
              href={siteConfig.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-sm hover:text-white transition-colors"
            >
              <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
          </li>
          <li>
            <button
              data-calendly-url={siteConfig.calendlyUrl}
              class="calendly-open inline-flex items-center gap-2 text-sm hover:text-white transition-colors cursor-pointer"
            >
              <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zm0-12H5V6h14v2z"/>
              </svg>
              Schedule a meeting
            </button>
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-10 pt-6 border-t border-slate-800 text-center text-sm">
      Copyright &copy; {year} {siteConfig.title}
    </div>
  </div>
</footer>
