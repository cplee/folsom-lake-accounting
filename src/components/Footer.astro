---
import { siteConfig, navLinks } from "../data/siteData";
const year = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-400 py-12 border-t border-slate-800">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Branding -->
      <div>
        <a href="/" class="flex items-center gap-2 mb-3">
          <img src={siteConfig.logo} alt={siteConfig.title} class="h-8" />
          <span class="text-white font-semibold">{siteConfig.title}</span>
        </a>
        <p class="text-sm leading-relaxed">
          Certified Public Accountant serving Folsom and the greater Sacramento area.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-3">
          Quick Links
        </h3>
        <ul class="space-y-2">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.url}
                class="text-sm hover:text-white transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-white text-sm font-semibold uppercase tracking-wider mb-3">
          Contact
        </h3>
        <ul class="space-y-2 text-sm">
          <li>{siteConfig.address1}</li>
          <li>{siteConfig.address2}</li>
          <li>
            <a href={`tel:${siteConfig.phone}`} class="hover:text-white transition-colors">
              {siteConfig.phone}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-10 pt-6 border-t border-slate-800 text-center text-sm">
      Copyright &copy; {year} {siteConfig.title}
    </div>
  </div>
</footer>
