---
import { hero, services, siteConfig } from "../data/siteData";
---

<section class="relative text-center text-white">
  <!-- Background image -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style="background-image: url('/assets/img/bg-masthead.webp');"
  >
  </div>
  <!-- Dark overlay â€” lighter at top to let the lake photo show through -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/15 via-black/30 to-black/55"></div>

  <div class="relative z-10 mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 pt-20 sm:pt-24 md:pt-32 pb-12 sm:pb-16">
    <!-- Hero text -->
    <div class="max-w-3xl mx-auto mb-8 sm:mb-12">
      <h1 class="font-serif text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight leading-tight mb-6" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
        {hero.tagline}
      </h1>
      <p class="text-sm sm:text-base md:text-lg font-semibold text-white leading-relaxed mb-8 sm:mb-10 max-w-2xl mx-auto" style="text-shadow: 1px 2px 6px rgba(0,0,0,0.7);">
        {hero.description}
      </p>
      <button
        data-calendly-url={siteConfig.calendlyUrl}
        class="calendly-open inline-block rounded-lg bg-brand-600 px-6 sm:px-8 py-3 sm:py-3.5 text-sm sm:text-base font-semibold text-white shadow-lg hover:bg-brand-700 transition-colors focus:outline-none focus:ring-2 focus:ring-brand-400 focus:ring-offset-2 focus:ring-offset-slate-900 cursor-pointer"
      >
        {hero.buttonText}
      </button>
    </div>

    <!-- Service cards grid -->
    <div id="services" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
      {services.map((service) => (
        <div class="bg-white/95 rounded-lg shadow-lg p-4 sm:p-5 text-left transition-all duration-200 hover:shadow-xl hover:scale-[1.03]">
          <h3 class="font-serif text-sm sm:text-base font-bold text-slate-900 mb-2 sm:mb-3 text-center">{service.title}</h3>
          <p class="text-xs sm:text-sm leading-relaxed text-slate-600">{service.text}</p>
        </div>
      ))}
    </div>
  </div>
</section>
