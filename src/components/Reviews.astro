---
import { siteConfig } from "../data/siteData";
---

<section id="reviews" class="py-16 sm:py-20 bg-slate-50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="font-serif text-3xl sm:text-4xl font-bold text-slate-900 text-center mb-12">
      Reviews
    </h2>
    <div class="rounded-lg">
      <div class="sk-ww-google-reviews" data-embed-id={siteConfig.sociableKitId}></div>
      <script src="https://widgets.sociablekit.com/google-reviews/widget.js" async defer></script>
    </div>
  </div>
</section>
