---
interface Props {
  title: string;
  text: string;
  img: string;
}

const { title, text, img } = Astro.props;
---

<div class="group relative overflow-hidden rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300">
  <!-- Background photo -->
  <div
    class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-105"
    style={`background-image: url('${img}');`}
  >
  </div>
  <!-- Gradient overlay for readability -->
  <div class="absolute inset-0 bg-gradient-to-t from-slate-900/95 via-slate-900/70 to-slate-900/40"></div>

  <!-- Content -->
  <div class="relative z-10 flex flex-col justify-end p-6 sm:p-8 min-h-[320px]">
    <h3 class="font-serif text-xl font-bold text-white mb-3">{title}</h3>
    <p class="text-sm leading-relaxed text-slate-200">{text}</p>
  </div>
</div>
