---
import { services } from "../data/siteData";
import ServiceCard from "./ServiceCard.astro";
---

<section id="services" class="py-16 sm:py-20 bg-slate-50">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <h2 class="font-serif text-3xl sm:text-4xl font-bold text-slate-900 text-center mb-12">
      Services
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {services.map((service) => (
        <ServiceCard title={service.title} text={service.text} img={service.img} />
      ))}
    </div>
  </div>
</section>
